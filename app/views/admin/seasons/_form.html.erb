<%= form_for [:admin, @season] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @season,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name  -%>
  </div>
  
  <div class='field'>
    <%= f.label :start_date -%>
    <%= f.datetime_select :start_date  -%>
  </div>
  
  <div class='field'>
    <%= f.label :active -%>
    <%= f.check_box :active, :checked => @season[:active]  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.seasons.season'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete')
              } %>
<% end -%>
